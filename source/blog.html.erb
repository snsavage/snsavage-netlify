---
pageable: true
per_page: 10
---

<%= partial "partials/paginate" %>

<div class="article-summaries">
  <% page_articles.each_with_index do |article, i| %>
    <div class="article-summary">
      <div class="article-summary-header clearfix">
        <h2 class="article-title"><%= link_to article.title, article %></h2>
        <h4 class="article-date"><%= article.date.strftime('%B %e, %Y') %></h4>
      </div>
      <div class="article-summary-text clearfix">
        <p>
          <%= strip_tags(article.summary) %>
          <%= link_to 'Read more...', article, {class: "read-more"} %>
        </p>
      </div>
    </div>
  <% end %>
</div>

<%= partial "partials/paginate" %>
